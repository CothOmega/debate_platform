<div class="Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
    <%= f.text_field :username, placeholder: "User name" %><br>
    <%= f.text_field :email, placeholder: "Email" %><br>
    <%= f.text_field :password, placeholder: "Password" %><br>
    <%= f.submit :login %><br>
  <% end %>
  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li><%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>

