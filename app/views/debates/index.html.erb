<div id="debate_container">

  <div id="recent_list">
    <h4>Recent Debates</h4>
    <% @debates.each do |debate| %>
      <div class="single_debate">
        <%= link_to debate do %>
          <h5><%= debate.title %></h5>
          <p><%= debate.body %></p>
          
          <%= debate.topic %> | 
          <%= debate.votes_for %> For | 
          <%= debate.votes_against %> Against | 
          <%= debate.comments.length %> Comments
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="popular_list">
    <h4>Popular Debates</h4>
    <% @debates.each do |debate| %>
      <div class="single_debate">
        <%= link_to debate do %>
          <h5><%= debate.title %></h5>
          <p><%= debate.body %></p>
          
          <%= debate.topic %> | 
          <%= debate.votes_for %> For | 
          <%= debate.votes_against %> Against | 
          <%= debate.comments.length %> Comments
        <% end %>
      </div>
    <% end %>
  </div>

</div>